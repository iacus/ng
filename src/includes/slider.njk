<div class="novartis__gallery novartis__container">
    <div class="swiper">
        <div class="swiper-wrapper">
            {% for item in slider.gallery %}
                <div class="swiper-slide">
                    {% if loop.first %}
                        <div class="swiper-image">
                            {% image "./src/assets/images/"+item.img|safe , "img-fit", item.title, "(min-width: 30em) 50vw, 100vw" ,  "eager" %}
                        </div>
                    {% else %}
                        <div class="swiper-image">
                            {% image "./src/assets/images/"+item.img|safe , "img-fit", item.title, "(min-width: 30em) 50vw, 100vw" , "lazy" %}
                        </div>
                    {% endif %}
                    <p>{{item.title}}</p> 
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
</div>
